{
  "manifest_version": 2,
  "name": "zhihuX",
  "version":"0.1",
  "description":"隐藏知乎标题栏,方便上班刷知乎不被别人发现",
  "browser_action": {
    "default_icon":"images/logo.png",
    "default_title": "安装即隐藏知乎logo和文章标题"
  },
  "content_scripts":[
    {
      "matches": ["https://www.zhihu.com/*","https://zhihu.com/*"], 
      "css":["index.css"]
    }
  ],
  "permissions": [
    "activeTab"
  ]
}

